<%= form_with(model: note, local: true) do |form| %>
  <% if note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
        <% note.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" style="margin-bottom: 5px;">
    <%= form.text_field :title, class: "form-control", placeholder: "Title", style: "max-width: 300px;" %>
  </div>

  <div class="field" style="margin-bottom: 5px;">
    <%= form.text_area :content, class: "form-control", placeholder: "Content", style: "max-width: 300px;" %>
  </div>

  <div class="actions">
    <%= link_to "Back", notes_path, class: "btn btn-primary"  %>
    <%= form.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
